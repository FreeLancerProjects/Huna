<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="8dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/card"
    android:clickable="false"
    android:longClickable="false"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginBottom="5dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <FrameLayout
                android:layout_width="95dp"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/user_profile"
                    android:clickable="false"
                    android:longClickable="false"
                    />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Name"
                    android:clickable="false"
                    android:longClickable="false"
                    />
                <TextView
                    android:id="@+id/tv_order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:textSize="13sp"
                    android:text="Address "
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/btn_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:background="@drawable/accept_btn"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/accept_icon"
                        android:text="@string/accept2"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/accept_icon" />
                    <Button
                        android:id="@+id/btn_refuse"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:background="@drawable/refuse_btn"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:drawableEnd="@drawable/refuse2_icon"
                        android:text="@string/refuse2"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:drawablePadding="5dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:drawableRight="@drawable/refuse_icon" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:clickable="false"
                    android:longClickable="false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:text="@string/more"
                    android:textColor="@color/black"
                    android:clickable="false"
                    android:longClickable="false"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>